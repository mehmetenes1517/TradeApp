@{
    ViewData["Title"] = "User Register";
}
@model User
<form asp-controller="Home" asp-action="Register" method="post">
    <div class="flex p-12" style="flex-direction: column;justify-content: center;">
        <div class="p-1"><label asp-for="name">Display Name : </label><input class="form-control" type="text" asp-for="name" required></div>
        <div class="p-1"><label asp-for="username">Username : </label><input class="form-control" type="text" asp-for="username" required></div>
        <div class="p-1"><label asp-for="password">Password : </label><input class="form-control"  type="password" asp-for="password" required></div>
        <button class="btn btn-primary p-1" type="submit">Sign up</button>
    </div>
</form>