<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TradeApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TradeApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="bg-primary mb-3">

        <nav style="display:flex; justify-content: space-between;align-items: center;font-family: Arial, Helvetica, sans-serif;">
            <div class="text-white m-3" style="font-size: 2rem;">TradeApp</div>
            <div style="display: flex;align-items: center;justify-content: center;">
            @if(!User.Identity.IsAuthenticated){
                <a asp-controller="Home" asp-action="Index" class="p-3 text-white" style="text-decoration: dashed;">Home</a>
                <a asp-controller="Home" asp-action="Register" class="p-3 text-white" style="text-decoration: dashed;">Register</a>
                <a asp-controller="Home" asp-action="Login" class="p-3 text-white" style="text-decoration: dashed;">Login</a>
            }
            @if(User.Identity.IsAuthenticated){
                <a asp-controller="Home" asp-action="Index" class="p-3 text-white" style="text-decoration: dashed;">@User.Identity.Name</a>
                <a asp-controller="Home" asp-action="Products" class="p-3 text-white" style="text-decoration: dashed;">Products</a>
                <a asp-controller="Home" asp-action="Logout" class="p-3 text-white" style="text-decoration: dashed;">Logout</a>
            }
            
            </div>

        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
